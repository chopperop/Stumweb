<%= form_for(current_user.photos.build(params[:photo]), :html => {:multipart => true}) do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <div class="field">
	<%= f.file_field :image %>
  </div>
  <div class="field">
  	<%= f.label :remote_image_url, "or image URL" %>
    <%= f.text_field :remote_image_url %>
  </div> 
  <div class="actions">
    <%= f.submit "Submit" %>
  </div>
<% end %>