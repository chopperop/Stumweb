<%= form_for(current_user.photos.build(params[:photo])) do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <%= f.hidden_field :parent_id %>
  <div class="field">
    <%= f.text_area :content %>
  </div>
  <div class="actions">
    <%= f.submit "Submit" %>
  </div>
<% end %>