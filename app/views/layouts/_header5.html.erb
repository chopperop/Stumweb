<header>
   <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <%= link_to "Stumweb", root_path, :class => "brand" %>
          <div class="nav-collapse collapse">
            <ul class="nav">
              <li class="active"><%= link_to "Home", root_path %></li>
              <% if signed_in? %>
              <li><%= link_to "Profile", current_user %></li>

              <% end %>

              <% if signed_in? %>
              <li><%= link_to "Sign out", signout_path %></li>
              <% end %>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">More<b class="caret"></b></a>
                <ul class="dropdown-menu">
                  <li><%= link_to "About", about_path %></li>
                  <li><%= link_to "Contact", contact_path %></li>
                  <li><%= link_to "Help", help_path %></li>
                  <% if signed_in? %>
                  <li class="divider"></li>
                  <li class="nav-header">Options</li>
                  <li><%= link_to "Settings", edit_user_path(current_user) %></li>
                  <% end %>
                </ul>
              </li>
            </ul>
            <ul class="nav">
            <% if signed_in? %>
            <form class="navbar-search pull-right">
              <input type="text" class="search-query" placeholder="Search">
              <button type="submit" class="btn">Go</button>
            </form>
            <% end %>
            <% if signed_out? %>
            <li><%= link_to "Sign up!", signup_path %></li>
             <ul class="nav pull-left">
              <li class="dropdown">
            <a class="dropdown-toggle" href="#" data-toggle="dropdown">Sign In <strong class="caret"></strong></a>
            <div class="dropdown-menu" style="padding: 15px; padding-bottom: 0px;">
            <%= form_for(:sessions, :url => sessions_path, :class => "navbar-form pull-left") do |f| %>
              <li><%= f.text_field :username, :placeholder => "Username", :class => "span2"%></li>
              <li><%= f.password_field :password, :placeholder => "Password", :class => "span2"%></li>
              <li><%= f.submit "Sign in", :class => "btn btn-primary"%></li>
            <% end %>
            </div>
              </li>
            </ul>
            <% end %>
            <% if signed_out? %>
            <form class="navbar-search pull-right">
              <%= form_tag contents_path, method: :get do %>
                  <%= text_field_tag :search, params[:search] %>
                  <%= submit_tag "Search", name: nil %>
              <% end %>
            </form>
            <% end %>
            </ul> 
          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>
</header>